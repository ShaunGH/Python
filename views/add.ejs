<!DOCTYPE html>
<html>
    <head>
        <title>question</title>
        <link rel="stylesheet" href="style.css">
        <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0">
    </head>
    <body data-spy="scroll">
            <%- include('./menu') %>
        <section>
            <div class="content">
                <form class='exam' action="/add" method="post">
                    <pre>
                        <table id='addform'>
                            <tr>
                                <td>Title:</td>
                                <td><input type="text" name="title"></td>
                            </tr>
                            <tr>
                                <td>Type:</td>
                                <td><input type="text" name='type'></td>
                                <td>Language:</td>
                                <td><input type="text" name="language"></td>
                            </tr>
                            <tr>
                                <td>Describe:</td>
                                <td colspan="3"><textarea name="describe"></textarea></td>
                            </tr>
                            <tr>
                                <td>RightAnswer:</td>
                                <td colspan="3"><textarea name="ranswer"></textarea></td>
                            </tr>
                            <tr>
                                <td>WrongAnswer:</td>
                                <td colspan="3"><textarea name="wanswer"></textarea></td>
                            </tr>
                        </table>
                </pre>
                <div class="submit"><button type="submit" class='submit'>Submit</button></div>
            </form>
                <p class="alert"><%= alert %></p>
                <p class="error"><%= error %></p>
            </div>
        </section>
    </body>
</html>